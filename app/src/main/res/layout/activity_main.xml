            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_weight="0.1"
                android:background="#0A83E8">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_logo_admin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.4"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:background="@drawable/main_shape"

                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"

                    android:weightSum="3"
                    android:orientation="vertical"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvNhaTro"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_weight="1"

                                app:cardBackgroundColor="@color/white"

                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="6dp">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:padding="5dp"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_house_manage"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="0.7"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <TextView
                                            android:text="Quản lý nhà"
                                            android:textSize="14dp"

                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:id="@+id/txt_totalHouse"
                                            android:textColor="@color/teal_700"
                                            android:layout_marginLeft="3dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_joinRoom"
                                app:cardBackgroundColor="@color/white"

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_weight="1"


                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="6dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_notes"
                                            android:padding="5dp"

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="0.7"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <TextView
                                            android:text="Danh sách thuê trọ"
                                            android:textSize="14dp"
                                            android:textColor="@color/black"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_quanLyTenants"
                                app:cardBackgroundColor="@color/white"

                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_weight="1"


                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="6dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_tenants"
                                            android:padding="5dp"

                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="0.7"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <TextView
                                            android:text="Quản lý người thuê"
                                            android:textSize="14dp"
                                            android:textColor="@color/black"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:id="@+id/txt_totalTenants"
                                            android:layout_width="wrap_content"
                                            android:textColor="@color/teal_700"
                                            android:layout_marginLeft="3dp"
                                            android:layout_height="wrap_content"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvDichVu"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/white"

                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                android:layout_margin="6dp">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:weightSum="2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:layout_weight="1.3"
                                        android:layout_width="match_parent"
                                        android:padding="5dp"
                                        android:layout_height="0dp">
                                        <ImageView
                                            android:src="@drawable/ic_bill"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"/>

                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_weight="0.7"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp">
                                        <TextView
                                            android:text="Quản lý dịch vụ"
                                            android:textSize="14dp"
                                            android:textColor="@color/black"

                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"/>
                                        <TextView
                                            android:id="@+id/txt_totalServices"
                                            android:textColor="@color/teal_700"
                                            android:layout_marginLeft="3dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="10dp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

